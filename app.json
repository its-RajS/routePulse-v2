{
  "expo": {
    "name": "RoutePulse",
    "slug": "RoutePulse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/iconBus.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/iconBus.png",
        "backgroundColor": "#000000"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/iconBus.png"
    },
    "plugins": [
      ["expo-router", { "origin": "https://routePulse.com/" }],
      ["expo-location"],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splashScreen.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
